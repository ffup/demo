<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<!--
<div class="pull-left">LEFT</div>
<div class="pull-right">RIGHT</div>

-->

<!-- comment -->
<div class="">
{% for comment in pagination %}
<div id="{{ comment.postIndex }}">
  <div class="pull-right"><a href="#{{ comment.postIndex}}">#{{ comment.postIndex }}</a></div>
  <blockquote>
    <p>{{ comment.content|nl2br }}</p>
    <footer>{{ comment.user.username }}<cite title="Source Title">({{ comment.createdAt|time_ago_in_words }})</cite></footer>
  </blockquote>
</div>
{% endfor %}
</div>
<div class="pull-right">
  <ul class="pagination">
    <li class="{{ pages.current == pages.first ? 'disabled' : null }}">
      {% if pages.current != pages.first %}
      <a href="{{ path('thread_view', {'id': thread.id, 'page': pages.first}) }}">&laquo;</a></li>
      {% endif %}
      {% for page in pages.pagesInRange %}
    <li class="{{ pages.current == page ? 'active' : null }}">
      <a href="{{ path('thread_view', {'id': thread.id, 'page': page}) }}">{{ page }}</a></li>
      {% endfor %}
    <li class="{{ pages.current == pages.last ? 'disabled' : null }}">
      {% if pages.current != pages.last %}
      <a href="{{ path('thread_view', {'id': thread.id, 'page': pages.last}) }}">&raquo;</a>
      {% endif %}
  </li>
    </ul>
</div>

{% endblock %}




