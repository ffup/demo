{% extends "AcmeUserBundle::layout.html.twig" %}
{% block title %}Sign in{% endblock %}
{% block body %}
<h2>Sign in</h2>
<div class="row">
  <div class="col-xs-8 col-sm-4">
  {% if error %}
    <p class="">{{ error.message }}</p>
  {% endif %}
  <!-- Split button -->
  <form role="form" action="{{ path('_signin_check') }}" method="post">
    <div class="form-group">
      <label for="email1">Username or email</label>
      <input type="text" value="{{ last_username }}" class="form-control" id="email1" name="_username" placeholder="Enter username or email">
    </div>
    <div class="form-group">
      <label for="password1">Password</label>
      <input type="password" class="form-control" id="password1" name="_password" placeholder="Password">
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-xs-8 col-sm-8">
          <input type="checkbox" id="remember_me" name="_remember_me" checked />
          <label for="remember_me">Keep me logged in</label>
        </div>
        <div class="col-xs-4 col-sm-4">
          <button type="submit" class="btn btn-default">Signin</button>
        </div>
      </div>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
  </form>
<div class="text-left"><a href="{{ path('_signup') }}">Create a Account</a></div>
  </div>
  <div class="col-xs-4 col-sm-8"></div>
  <!-- Add the extra clearfix for only the required viewport -->
  <div class="clearfix visible-xs"></div>
</div>

