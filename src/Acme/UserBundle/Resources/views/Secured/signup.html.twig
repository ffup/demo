{% extends "AcmeUserBundle::layout.html.twig" %}
{% block title %}Sign up{% endblock %}
{% block body %}
<h2>Sign up</h2>
<div class="row">
  <div class="col-xs-8 col-sm-6">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal', 'role': 'form'}}) }}
      <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">{{ form_errors(form) }}</div>
      </div>
      <div class="form-group {{ form_errors(form.username) ? 'has-error' : null }}">  
        <div class="col-sm-2"></div>
        <div class="col-sm-10">{{ form_errors(form.username) }}</div>  
        <label for="username" class="col-sm-2 control-label">Username</label>
        <div class="col-sm-10">{{ form_widget(form.username, {'attr': {'id': 'username', 'class': 'form-control', 'placeholder': 'Username'}}) }}</div>
      </div>
      <div class="form-group {{ form_errors(form.password) ? 'has-error has-feedback' : null }}">  
        <div class="col-sm-2"></div>
        <div class="col-sm-10">{{ form_errors(form.password) }}</div>  
        <label for="password3" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">{{ form_widget(form.password, {'attr': {'id': 'password', 'class': 'form-control', 'placeholder': 'Password', 'type': 'password'}}) }}</div>
      </div>
      <div class="form-group {{ form_errors(form.email) ? 'has-error' : null }}">  
        <div class="col-sm-2"></div>
        <div class="col-sm-10">{{ form_errors(form.email) }}    </div>  
        <label for="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">{{ form_widget(form.email, {'attr': {'id': 'email', 'class': 'form-control', 'placeholder': 'Email'}}) }}</div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Sign up</button>
        </div>
      </div>
    {{ form_end(form) }}
  </div>
</div>
<div class="col-xs-4 col-sm-6"></div>
{% endblock %}
