{% extends 'AcmeBoardBundle::layout.html.twig' %}
{% block body %}
<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li><a href="/board">Board</a></li>
  <li class="active">thread</li>
</ol>
<div class="page-header">
  <h1>{{ thread.title }} <small>Subtext for header</small></h1>
</div>
<div>
<a class="btn btn-default" href="{{ path('comment_create', {'id': thread.id}) }}" role="button">CREATE COMMENT</a>
</div>
<!-- thread -->
  <!-- Button trigger modal -->
