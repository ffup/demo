{% extends 'AcmeBoardBundle::layout.html.twig' %}


{% block body %}

<h2>Create a Comment</h2>

<div class="row">
  <div class="col-xs-8 col-sm-8">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': '', 'role': 'form'}}) }}
    {{ form_errors(form) }}
    <div class="form-group {{ form_errors(form.content) ? 'has-error' : null }}">  
      {{ form_errors(form.content) }}    
      <!-- <label for="content" class="col-sm-2 control-label">Content</label> -->
      {{ form_widget(form.content, {'attr': {'id': 'content', 'class': 'form-control', 'placeholder': 'Content'}}) }}
    </div>
     
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default ">Create a comment</button>
      </div>
    </div>
    {{ form_end(form) }}
  </div>
  
  <div class="col-xs-4 col-sm-4">
  </div> 
</div>

{% endblock %}

