{% extends "AcmeUserBundle::layout.html.twig" %}
{% block title %}Sign in{% endblock %}
{% block body %}
<h2>{% trans %}Sign in{% endtrans %}</h2>
<div class="row">
  <div class="col-xs-10 col-sm-5">
  {% if error %}
    <div class="alert alert-warning"><strong>Warning!</strong> {{ error.message }}</div>
  {% endif %}
  <!-- Split button -->
  <form role="form" action="{{ path('_signin_check') }}" method="post">
    <div class="form-group">
      <label for="email">{% trans %}Username or email{% endtrans %}</label>
      <input type="text" value="{{ last_username }}" class="form-control" id="email" name="_username" placeholder="Enter username or email">
    </div>
    <div class="form-group">
      <label for="password1">{% trans %}Password{% endtrans %}</label>
      <input type="password" class="form-control" id="password1" name="_password" placeholder="Password">
    </div>
