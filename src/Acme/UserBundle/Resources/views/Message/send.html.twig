{% extends "::base.html.twig" %}

{% block title %}AcmeUserBundle:Message:index{% endblock %}

{% block body %}
<h1>Message send</h1>

<div class="row">
  <div class="col-xs-8 col-sm-8">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal', 'role': 'form'}}) }}
    {{ form_errors(form) }}
    <div class="form-group {{ form_errors(form.toUser) ? 'has-error has-feedback' : null }}">  
      <div class="col-sm-2"></div>
      <div class="col-sm-10">{{ form_errors(form.toUser) }}</div>      
      <label for="To_user" class="col-sm-2 control-label">To user</label>
      <div class="col-sm-10">
      {{ form_widget(form.toUser, {'attr': {'id': 'to_user', 'class': 'form-control', 'placeholder': 'To username', 'data-validation': 'required', }}) }}
      {% if form_errors(form.toUser) %}<span class="glyphicon glyphicon-remove form-control-feedback"></span>{% endif %}
      </div>
    </div>    
    
    <div class="form-group {{ form_errors(form.title) ? 'has-error has-feedback' : null }}">  
      <div class="col-sm-2"></div>
      <div class="col-sm-10">{{ form_errors(form.title) }}</div>      
      <label for="title" class="col-sm-2 control-label">Title</label>
      <div class="col-sm-10">
      {{ form_widget(form.title, {'attr': {'id': 'title', 'class': 'form-control', 'placeholder': 'title', 'data-validation': 'required', }}) }}
        <!-- <span class="help-block">HELP: </span> -->
      </div>
    </div>
    <div class="form-group {{ form_errors(form.content) ? 'has-error has-feedback' : null }}">  
      <div class="col-sm-2"></div>
      <div class="col-sm-10">
          {{ form_errors(form.content) }}    
      </div>    
      <label for="content" class="col-sm-2 control-label">Content</label>
      <div class="col-sm-10">
      {{ form_widget(form.content, {'attr': {'id': 'content', 'class': 'form-control', 'placeholder': 'content'}}) }}
      </div>
    </div>
    <div class="col-sm-10"><button type="submit" class="btn btn-primary">Create</button></div>
    <div class="col-sm-2"></div>
    {{ form_end(form) }}
  </div>
</div>
<div class="row">
  <div class="col-xs-4 col-sm-4">
  </div>
</div>  

{% endblock %}
