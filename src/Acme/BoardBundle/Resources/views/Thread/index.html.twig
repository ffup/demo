<!-- HTML to write -->
<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li class="active">Board</li>
</ol>
<div class="page-header">
  <h1>Example page header <small>Subtext for header</small></h1>
</div>

<div><a href="{{ path('thread_create') }}">
  <button class="btn btn-default">CREATE THREAD</button></a>
</div>

<div class="table-condensed">
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Subject</th>
        <th>Author</th>
        <th>Replies</th>
        <th>Last Post</th>
      </tr>
    </thead>
    <tbody>
      {% for thread in pagination %}
      <tr>
        <td></td>
        <td>
        <a href="{{ path('thread_view', {'id': thread.id}) }}" data-toggle="tooltip" title="{{ thread.content }}">{{ thread.title }}</a><span class="label label-default">Default</span>
</td>
        <td>{{ thread.user.username }}</td>      
        <td><span class="badge">{{ thread.numReplies }}</span></td>      
        <td>{{ thread.updatedAt|time_ago_in_words }}</td>                  
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% if pages.pageCount > 1 %}
<div class="pull-right">
  <ul class="pagination">
  {% if pages.firstPageInRange is not defined %}
    <li>
      <a href="{{ path(app.request.attributes.get('_route'), {'page': pages.first}) }}">&laquo;</a>
    </li>
  {% endif %}
  {% for page in pages.pagesInRange %}
    <li class="{{ pages.current == page ? 'active' : null }}">
      <a href="{{ path(app.request.attributes.get('_route'), {'page': page}) }}">{{ page }}</a>
    </li>
  {% endfor %}
  {% if pages.lastPageInRange is not defined %}
    <li>
      <a href="{{ path(app.request.attributes.get('_route'), {'page': pages.last}) }}">&raquo;</a>
    </li>
  {% endif %}
  </ul>
</div>
{% endif %}

{% endblock %}
