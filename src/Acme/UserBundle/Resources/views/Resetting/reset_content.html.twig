<div class="row">
  <div class="col-xs-10 col-sm-8">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal', 'role': 'form'}}) }}      
      <div class="form-group {{ form_errors(form.plainPassword.first) ? 'has-error has-feedback' : null }}">  
        <div class="col-sm-3"></div>
        <div class="col-sm-9">{{ form_errors(form.plainPassword.first) }}</div>  
        <label for="password" class="col-sm-3 control-label">{{ 'password'|trans }}</label>
        <div class="col-sm-9">{{ form_widget(form.plainPassword.first, {'attr': {'id': 'password', 'class': 'form-control', 'placeholder': 'Password', 'type': 'password'}}) }}</div>
      </div>
      
      <div class="form-group {{ form_errors(form.plainPassword.second) ? 'has-error has-feedback' : null }}">  
        <div class="col-sm-3"></div>
        <div class="col-sm-9">{{ form_errors(form.plainPassword.second) }}</div>  
        <label for="repassword" class="col-sm-3 control-label">{{ 're.password'|trans }}</label>
        <div class="col-sm-9">{{ form_widget(form.plainPassword.second, {'attr': {'id': 'repassword', 'class': 'form-control', 'placeholder': 'RePassword', 'type': 'password'}}) }}</div>
      </div>
      
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </div>
      
      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
    {{ form_end(form) }}
  </div>
</div>
